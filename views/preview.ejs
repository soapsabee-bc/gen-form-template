<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  </head>

<body>
    
    <div class="container">
      <% if(template["formDefinition"]["tabs"].length == 0) { %> 
      <% template["formDefinition"]["fields"].forEach((element) => { %>
        <%  let i = 0 %>
          <div class="row">
            <% element["fields"][i].forEach(ele => { %> 
              
                <div class="col-sm" style="border: solid; height: 40px ; ">
                  <div><%= ele.id %></div>
                </div>
                <%  i++ %>
            <% }) %>

        </div>
          
      <% }) %>
      <% } %> 

      <% if(template["formDefinition"]["tabs"].length > 0) { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
        <% template["formDefinition"]["tabs"].forEach(element => { %> 
          <li class="nav-item" role="presentation">
            <button class="nav-link " id='<%= element.id %>-tab' data-bs-toggle="tab" data-bs-target='#<%= element.id %>'  type="button" role="tab"  aria-selected="true"> <%= element.title %> </button>
          </li>
        <% }) %> 
        </ul>


    <div class="tab-content" id="myTabContent">
      <% template["formDefinition"]["tabs"].forEach(element => { %> 

      <div class="tab-pane fade" id='<%= element.id %>' role="tabpanel" aria-controls='<%= element.id %>-tab'  >
        <% template["formDefinition"]["fields"].forEach((element2) => { %>
          <%  let i = 0 %>
            <div class="row">
              <% element2["fields"][i].forEach(ele => { %> 
                
                  <div class="col-sm" >
                    <% if(ele.type === "text_input_custom" && element2["tab"] == element.id ) {%>
                      
                          <label for="<%= ele.id %>"><%= ele.name %></label>
                          <input id="<%= ele.id %> " style="width: 100%;" type="text">
                      
                      <% } %> 
                      <% if(ele.type === "table" && element2["tab"] == element.id ) {%>
                      
                        <table class="table table-sm">
                          <thead>
                            <tr>
                              <th scope="col">#</th>
                              <th scope="col">First</th>
                              <th scope="col">Last</th>
                              <th scope="col">Handle</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <th scope="row">1</th>
                              <td>Mark</td>
                              <td>Otto</td>
                              <td>@mdo</td>
                            </tr>
                            <tr>
                              <th scope="row">2</th>
                              <td>Jacob</td>
                              <td>Thornton</td>
                              <td>@fat</td>
                            </tr>
                            <tr>
                              <th scope="row">3</th>
                              <td colspan="2">Larry the Bird</td>
                              <td>@twitter</td>
                            </tr>
                          </tbody>
                        </table>
                    
                    <% } %> 

                    <% if(ele.type === "dropdown" && element2["tab"] == element.id ) {%>
                      
                      <div class="dropdown" style="width: 100%;">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                          Dropdown button
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                          <li><a class="dropdown-item" href="#">Action</a></li>
                          <li><a class="dropdown-item" href="#">Another action</a></li>
                          <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                      </div>
                  
                  <% } %> 

                  <% if(ele.type === "date" && element2["tab"] == element.id ) {%>
                    <label for="<%= ele.id %>"><%= ele.name %></label>
                    <input id="<%= ele.id %> " style="width: 100%;" type="date">

                <% } %> 


                  </div>
                  <%  i++ %>
              <% }) %>
  
          </div>
            
        <% }) %>
      </div>
      
      <% }) %> 
    </div>

    </div>


      <% } %> 


    </div>

     
</body>
</html>